#! /bin/bash

# dokku home
cd /home/dokku

if [ -z $1 ]
then
  echo 'you need to send a container name'
  exit 1
fi

rm -rf $1
docker ps -a | grep $1 | awk '{print $1}' | xargs docker stop
docker ps -a | grep $1 | awk '{print $1}' | xargs docker rm
docker images | grep cornelio | awk '{print $3}' | xargs docker rmi
